.table-row {
  display: flex; /* 使用flex布局实现一行内多列的效果 */
  border-bottom: 1rpx solid #ccc; /* 添加底部边框，增加表格分隔线 */
}

.table-cell {
  white-space: nowrap;
  flex: 1; /* 填充剩余空间，使每个单元格平均分配宽度 */
  padding: 10rpx; /* 添加内边距，增加单元格内部间距 */
  text-align: center; /* 文字居中对齐 */
}